<Window x:Class="TexodeTaskWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TexodeTaskWin"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Title="TexodeTask" Height="720" Width="1280">

    <Window.Background>
        <LinearGradientBrush StartPoint="0.15,0" EndPoint="0.85,1">
            <GradientStop Color="#232F5A" Offset="0.0" />
            <GradientStop Color="#274D71" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Frame Name="frmScreen" 
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
